@media screen and (min-width: 1280px)

  $gutter = 50px

  grid-maker(100%, $gutter, xl)

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  $header-height = 72px
  $footer-height = 142px

  #main-container
    padding-top: $header-height

  #header
    &.nav-up
      top: -($header-height)

  #main-content
    min-height: calc('100vh - ' + ($footer-height + $header-height))

  .swiper-container
    &[data-carousel-type='scroll']
      width: calc('83.3333333333vw - ' + $margin-small)
      .swiper-slide
        &:not(:first-child)
          padding-left: $margin-tiny
        &:not(:last-child)
          padding-right: $margin-tiny
