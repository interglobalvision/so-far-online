@media screen and (min-width: 1024px)

  $gutter = 40px

  $margin-micro = ($gutter / 4)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-extra = 36px
  $font-size-large = 28px
  $font-size-mid = 17px
  $font-size-basic = 14px
  $font-size-small = 11px
  $font-size-tiny = 10px

  $hover-transition = 0.1s

  grid-maker(100%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  $header-height = 87px
  $footer-height = 256px
  $shop-menu-height = 71px

  .not-desktop
    display: none !important

  .desktop-only
    display: block !important

  figcaption
    font-size: $font-size-small

  #fixed-search-holder
    top: $header-height

  #main-container
    padding-top: $header-height

  .no-gutter-left
    padding-left: 0 !important

  .no-gutter-right
    padding-right: 0 !important

  #header
    &.nav-up
      top: -($header-height)

  #logo
    height: 32px

  .header-icon
    height: 24px

