  #shop-menu-list
    position: relative
    transform: rotate(0)

  .shop-sub-menu-trigger
    cursor: pointer
    &.show
      > span
        text-decoration: underline
      .shop-sub-menu
        visibility: visible
        pointer-events: auto
        opacity: 1

  .shop-sub-menu
    position: fixed
    width: 50%
    left: 50%
    top: 100%
    height: auto
    max-height: calc('100vh - ' + ($shop-menu-height + $header-height - 2))
    background-color $color-pale
    border: 1px solid $color-grey-dark
    border-right: none
    visibility: hidden
    pointer-events: none
    opacity: 0
    overflow: scroll

  #main-content
    min-height: calc('100vh - ' + ($header-height * 2))

  .row-l-reverse
    flex-direction: row-reverse

  .swiper-container
    &[data-swiper-type='scroll']
      width: calc('83.3333333333% - ' + $margin-small)
      .swiper-slide
        width: 400px
        &:not(:first-child)
          padding-left: $margin-tiny
        &:not(:last-child)
          padding-right: $margin-tiny

  .slide-prev-holder
    padding-right: $margin-micro

  .slide-next-holder
    padding-left: $margin-micro

  .slide-prev, .slide-next, .overlay-prev, .overlay-next
    &:focus
      outline: none

  .slide-pagination-icon
    height: 8.5px

  a, button
    &.button
      transition: background-color $hover-transition ease-in-out
      &:hover
        background-color: $color-grey-dark

  #article-content
    font-size: $font-size-basic + 2px
    h2, h3, h4, h5, h6
      font-size: $font-size-mid
    h2, h3, h4, h5, h6, ol, ul, figcaption, p, ul, ol, .wp-block-embed
      width: 50%
      margin-left: 25%
      ul, ol
        margin-left: 1rem
        max-width: auto
    p
      &:first-of-type
        font-size: $font-size-mid
    .wp-block-quote
      p
        width: 40%
        margin-left: 30%
        font-size: $font-size-basic
      cite
        width: 30%
        margin-left: 35%
        font-size: $font-size-small
    .wp-block-pullquote
      p
        font-size: $font-size-large

  .thumb-holder
    &.product-item-thumb-holder
      height: 460px
    &.scroll-slider-thumb-holder
      height: 280px
    &.further-reading-thumb-holder
      height: 14vw

  .form-grid-item
    padding-left: ($margin-micro / 2) !important
    padding-right: ($margin-micro / 2) !important
    &:first-of-type
      padding-left: 0 !important
    &:last-of-type
      padding-right: 0 !important

  #popup-notice
    width: 60vw
