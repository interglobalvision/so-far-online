$gutter = 15px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-extra = 48px
$font-size-large = 36px
$font-size-mid = 24px
$font-size-small = 18px
$font-size-tiny = 8px

grid-maker(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

$header-height = 32px
$footer-height = 266px

#main-container
  padding-top: $header-height

.container
  max-width: 1440px

.background-pale
  background-color: $color-pale

body
  overflow-x: hidden
  &.nav-open
    #mobile-nav
      transform: translateY(0)
    #header
      &.nav-up
        top: 0

#header
  background-color: $color-pink
  border-bottom: 1px solid $color-black
  position: fixed
  top: 0
  width: 100%
  transition: top 0.2s ease-in-out
  z-index: 200
  &.nav-up
    top: -($header-height)

#mobile-nav
  position: fixed
  top: 0
  padding-top: $header-height
  width: 100%
  z-index: 100
  background-color: $color-pink
  border-bottom: 1px solid $color-black
  transform: translateY(-100%)
  transition: transform .5s ease-in-out
  max-height: 100vh
  overflow-y: scroll

#main-content
  min-height: calc('100vh - ' + ($footer-height + $header-height))

#wp-_igv_featured_caption-wrap
  .mce-btn
    display: none

#main-container
  width: 100%

.swiper-container
  width: 100%
  &[data-carousel-type='scroll']
    width: calc('100vw - ' + $margin-small)
    margin: 0 auto
    overflow: visible
    .swiper-slide
      width: 200px
      &:not(:first-child)
        padding-left: $margin-tiny
      &:not(:last-child)
        padding-right: $margin-tiny

.swiper-scrollbar
  height: 2px !important
  background-color: $color-grey

.swiper-scrollbar-drag
  height: 4px
  margin-top: -1px
  border-radius: 0
  background-color: $color-black

article
  ol
    list-style-type: decimal

#footer
  border-top: 1px solid $color-black

input
  appearance: none
  width: 100%
  border: 1px solid $color-black
  padding-top: .8rem
  padding-bottom: .8rem
  background: $color-grey-light
  background-image: radial-gradient(circle, $color-grey-light 0%, $color-grey-medium 100%)
  +placeholder()
    text-align: center

button
  appearance: none
  background: transparent
  border: none
  cursor: pointer
