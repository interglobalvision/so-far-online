@media screen and (min-width: 550px)

  $gutter = 30px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  font-sizes($font-size-basic)

  $header-height = 49px
  $footer-height = 405px

  #main-container
    padding-top: $header-height

  #header
    &.nav-up
      top: -($header-height)

  #mobile-nav
    top: 0
    padding-top: $header-height

  #main-content
    min-height: calc('100vh - ' + ($footer-height + $header-height))

  .row-m-reverse
    flex-direction: row-reverse

  .swiper-container
    &[data-swiper-type='scroll']
      width: calc('100vw - ' + $margin-small)
      .swiper-slide
        width: 300px
        &:not(:first-child)
          padding-left: $margin-tiny
        &:not(:last-child)
          padding-right: $margin-tiny

  .swiper-scrollbar
    height: 2px !important
    background-color: $color-grey

  .swiper-scrollbar-drag
    height: 6px
    margin-top: -2px
