@media screen and (min-width: 720px)

  $gutter = 30px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  font-sizes($font-size-basic)

  $header-height = 49px
  $footer-height = 91px

  #main-container
    padding-top: $header-height

  #header
    &.nav-up
      top: -($header-height)

  #mobile-nav
    top: -($header-height)
    padding-top: $header-height

  #main-content
    min-height: calc('100vh - ' + ($footer-height + $header-height))

  .row-m-reverse
    flex-direction: row-reverse
